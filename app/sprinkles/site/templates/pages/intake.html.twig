{% extends "pages/abstract/default.html.twig" %}

{% set page_active = "intake" %}

{# Overrides blocks in head of base template #}
{% block page_title %}CEC Intake Form{% endblock %}

{% block body_matter %}
    <h1>Welcome to the CEC Support App</h1>

    <div class="intake-section">
        <h2>Dentist Details</h2>

        <form class="form-inline">
            <div class="dentist-section">
                <div class="row">
                    <div class="form-group col-sm-6">
                        <label for="dentist_name">Dentist Full Name</label>
                        <input type="text" class="form-control" id="full-name" placeholder="Full Name">
                    </div>

                    <div class="form-group col-sm-6">
                        <label for="provider-num">DentalVision Provider Number (6 digits)</label>
                        <input type="text" class="form-control" id="provider-num" placeholder="000000">
                    </div>
                </div>


                <div class="form-group">

                    <label for="inputHelpBlock">How does the doctor refer to themself with patients? (i.e. Dr.
                        Steven Smith likes patients to call him Dr. Steve)
                    </label>

                    <input type="text" id="inputHelpBlock" class="form-control" aria-describedby="helpBlock">
                    {#<span id="helpBlock"#}
                    {#class="help-block">(i.e. Dr. Steven Smith likes patients to call him Dr. Steve)</span>#}

                    {#<label for="dentist_name">How does the doctor refer to themself with patients? (i.e. Dr. Steven Smith likes patients to call him Dr. Steve):</label>#}
                    {#<input type="text" class="form-control" id="full-name" placeholder="Full Name">#}

                </div>


                <div class="row">
                    <div class="form-group col-sm-6">
                        Permanent or Locum?
                        <div class="radio">
                            <label>
                                <input type="radio" name="blankRadio" id="blankRadio1" value="option1" aria-label="">
                                Permanent
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="blankRadio" id="blankRadio1" value="option1" aria-label="">
                                Locum
                            </label>
                        </div>
                    </div>


                    <div class="form-group col-sm-6">
                        <label for="start-date">When did this doctor start at your location?</label>
                        <input type="text" class="form-control" id="provider-num" placeholder="">
                    </div>
                </div>

                <div class="form-group">
                    <label for="start-date">If the doctor is exiting, what is their last day seeing patients?</label>
                    <input type="text" class="form-control" id="provider-num" placeholder="">
                </div>

                <div class="row">
                    <div class="form-group col-sm-4">
                        Is the doctor currently or going on leave?
                        <div class="radio">
                            <label>
                                <input type="radio" name="blankRadio" id="blankRadio1" value="option1" aria-label="">
                                Yes
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="blankRadio" id="blankRadio1" value="option1" aria-label="">
                                No
                            </label>
                        </div>
                    </div>
                    <div class="form-group col-sm-4">
                        <label for="start-date">Leave start date:</label>
                        <input type="text" class="form-control" id="provider-num" placeholder="">
                    </div>
                    <div class="form-group col-sm-4">
                        <label for="start-date">Leave end date:</label>
                        <input type="text" class="form-control" id="provider-num" placeholder="">
                    </div>
                </div>

            </div>

        </form>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
    <button class="btn btn-default repeat">repeat</button>

{% endblock %}



{% block scripts_page %}
    <!-- Script to Activate the Carousel -->

    <script>
        // Cloning Form
        var id_count = 1;
        $('.repeat').on('click', function () {
            var source = $('.intake-section:first'), clone = source.clone();
            clone.find(':input').attr('id', function (i, val) {
                return val + "-" + id_count;
            });
            clone.appendTo('.body');
            id_count++;
        });

        // Removing Form Field
        $('body').on('click', '.remove', function () {
            var closest = $(this).closest('.form-holder').remove();
        });
    </script>

{% endblock %}
